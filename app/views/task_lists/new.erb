<h1>Add a task list</h1>

<%= form_for @task_list, url: "/task_lists/new" do |f| %>
<% if @task_list.errors.any? %>
    <%= "Your task list could not be created" %>
   <% end %>
  <div>
  <%= f.label :name %><br>
  <%= f.text_field :name %>
   <p class="error"><%= @task_list.errors[:name].first %></p>
</div>
  <p>
    <%= f.submit "Save Task List" %>
  </p>
<% end %>

<%= link_to 'Back', root_path %>